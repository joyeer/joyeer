

func sortArray(array:[Int], num:Int): [Int] {
    var startIndex = 0
    var endIndex = array.size() 
    endIndex = endIndex - 1

    
    while startIndex < endIndex {
        while array[startIndex] < num  {
            startIndex = startIndex + 1
        }
        while array[endIndex] > num  {
            endIndex = endIndex - 1
        }
        
        
        if startIndex < endIndex {
            var temp = array[startIndex]
            print(message:temp)
            array[startIndex] = array[endIndex]
            print(message:temp)
            array[endIndex] = temp
        }
        
        startIndex = startIndex + 1
        endIndex = endIndex - 1
    }

    return array
}

var result = sortArray(array: [6, 1, 2, 4, 5], num: 2)
print(message: result)

